{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@src/*": ["src/*"],
      "@entities/*": ["src/core/entities/*"],
      "@constants/*": ["src/core/constants/*"],
      "@database/*": ["src/core/database/*"],
      "@decorators/*": ["src/core/decorators/*"],
      "@exceptions/*": ["src/core/exceptions/*"],
      "@dtos/*": ["src/core/dtos/*"],
      "@guards/*": ["src/core/guards/*"],
      "@interceptors/*": ["src/core/interceptors/*"],
      "@middlewares/*": ["src/core/middlewares/*"],
      "@migrations/*": ["src/core/migrations/*"],
      "@queue/*": ["src/core/queue/*"],
      "@utils/*": ["src/core/utils/*"],
      "@clients/*": ["src/core/clients/*"],
      "@validations/*": ["src/core/validations/*"],
      "@enums/*": ["src/core/enums/*"],
    }
  }
}
