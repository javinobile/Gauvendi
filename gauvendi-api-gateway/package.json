{
  "name": "gauvendi-api-gateway",
  "version": "1.0.0",
  "description": "Gauvendi API Gateway - Microservices gateway for hotel management platform",
  "author": "Gauvendi Team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:prod": "rimraf dist && nest build --path tsconfig.build-prod.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@keyv/redis": "5.1.5",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cache-manager": "3.1.0",
    "@nestjs/common": "11.1.11",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.11",
    "@nestjs/microservices": "11.1.11",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.11",
    "@nestjs/swagger": "11.2.3",
    "@types/cache-manager-redis-store": "2.0.4",
    "amqp-connection-manager": "5.0.0",
    "amqplib": "0.10.9",
    "axios": "1.13.2",
    "cache-manager": "7.2.7",
    "cache-manager-redis-store": "3.0.1",
    "cacheable": "2.3.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "compression": "1.7.5",
    "date-fns": "3.6.0",
    "helmet": "8.0.0",
    "jwks-rsa": "3.2.0",
    "keyv": "5.5.5",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.2.0",
    "rxjs": "7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.14",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.11",
    "@types/compression": "1.8.1",
    "@types/express": "5.0.6",
    "@types/jest": "29.5.2",
    "@types/node": "20.19.27",
    "@types/supertest": "6.0.0",
    "@typescript-eslint/eslint-plugin": "8.51.0",
    "@typescript-eslint/parser": "8.51.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "29.7.0",
    "prettier": "3.0.0",
    "rimraf": "5.0.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@services/(.*)$": "<rootDir>/core/services/$1",
      "^@src/(.*)$": "<rootDir>/$1"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/.*\\.module\\.ts$",
      "/src/.*\\.dto\\.ts$"
    ],
    "coverageReporters": [
      "html",
      "lcov"
    ]
  }
}
